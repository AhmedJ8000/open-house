<!-- views/listings/index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Listings</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Here's all the Listings</h1>
    <!--Add in new anchor element-->
    <a href="/listings/new">Add a New Listing</a>
    <!--Closing body and html element under-->
    <ul>
  <% listings.forEach((listing) => { %>
  <li>
    A listing in <%= listing.city %> owned by <%= listing.owner.username %>.
  </li>
  <a href="/listings/<%=listing._id %>">See Details</a>
  <% }) %>
</ul>
  </body>
</html>
